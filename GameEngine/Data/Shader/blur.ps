#version 330

in vec2 uv;

out vec4 finalColor;

uniform sampler2D inputTexture;
uniform bool vertical;
uniform float delta;
uniform float kernel[65];

void main()
{
    vec3 color = vec3( 0.0, 0.0, 0.0 );

    if( vertical )
    {
        for( int i = 0; i <= 64; ++i )
            color += texture( inputTexture, uv + vec2( 0.0, delta * ( i - 32 ) ) ).rgb * kernel[ i ];
    }
    else
    {
        for( int i = 0; i <= 64; ++i )
            color += texture( inputTexture, uv + vec2( delta * ( i - 32 ), 0.0 ) ).rgb * kernel[ i ];
    }

    finalColor = vec4( color, 1.0 );
}
