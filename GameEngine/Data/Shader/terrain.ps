#version 330

in vec2 texCoords;

layout(location = 0) out vec4 finalColor;
layout(location = 1) out vec4 finalEmissive;

uniform vec3 diffuseColor;

void main()
{
    vec3 color = clamp( diffuseColor, 0.0, 1.0 );
    finalColor = vec4( color, 1.0 );
    finalEmissive = vec4( 0.0, 0.0, 0.0, 1.0 );
}
