#version 330

in vec2 texCoords;
in vec3 normal;

layout(location = 0) out vec4 finalColor;
layout(location = 1) out vec4 finalNormal;

uniform vec3 diffuseColor;
uniform sampler2D diffuseTexture;

void main()
{
    finalColor = vec4( diffuseColor * texture( diffuseTexture, texCoords ).rgb, 1.0 );
    finalNormal = vec4( normalize( normal ) * 0.5 + vec3( 0.5, 0.5, 0.5 ), 1.0 );
}